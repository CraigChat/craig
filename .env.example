# Discord Bot Configuration
# Get these values from https://discord.com/developers/applications

# Your Discord bot token (Bot > Token)
DISCORD_BOT_TOKEN=your_bot_token_here

# Your Discord Application ID (General Information > Application ID)
# This should be the same as CLIENT_ID for most Discord bots
DISCORD_APP_ID=your_application_id_here

# OAuth2 Client ID (OAuth2 > General > Client ID)
# Usually the same as DISCORD_APP_ID for Discord bots
CLIENT_ID=your_client_id_here

# OAuth2 Client Secret (OAuth2 > General > Client Secret)
CLIENT_SECRET=your_client_secret_here

# Optional: Guild ID for development slash commands
# When set, running 'yarn run sync:dev' will deploy commands only to this server (fast)
# When empty, 'yarn run sync' deploys commands globally to all servers (slower, up to 1 hour)
# For production: leave empty or remove this line to use global deployment
DEVELOPMENT_GUILD_ID=your_test_server_id_here

# Database Configuration
# PostgreSQL database name
POSTGRES_DB=craig

# PostgreSQL username
POSTGRES_USER=postgres

# PostgreSQL password - Change this to a secure password!
POSTGRES_PASSWORD=your_secure_password_here

# Database connection settings for Docker deployment
POSTGRESQL_HOST=postgres
DATABASE_URL="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRESQL_HOST}/${POSTGRES_DB}"

# For local development (uncomment these and comment the Docker versions above):
# POSTGRESQL_HOST=localhost
# DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/craig

# Redis Configuration
# Redis connection settings for Docker deployment
REDIS_URL=redis://redis:6379
REDIS_HOST=redis

# For local development (uncomment these and comment the Docker versions above):
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost

# Additional Configuration
# Node.js version used in the container
NODE_VERSION=18.18.2

# Environment mode
NODE_ENV=production

# Download domain for file hosting
DOWNLOAD_DOMAIN=localhost:8080

# Service timeout settings
REDIS_START_TIMEOUT_S=30
POSTGRESQL_START_TIMEOUT_S=60